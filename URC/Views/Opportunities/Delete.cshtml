@model URC.Models.Opportunity

@{
    ViewData["Title"] = "Delete Opportunity";
}

@section Styles {
    <link href="~/css/opportunities.css" rel="stylesheet" type="text/css" />
    <link href="~/css/detail.css" rel="stylesheet" type="text/css" />
}

@functions {
    public String replaceImageIfNull(String data)
    {
        if (data == null || data.Length == 0)
            return "There is no image";

        return "<img class='image-preview' src='" + data + "' />";
    }
}

<div class="title-container">
    <div class="btn_goback"><button class="btn btn-primary" onclick="location.href='@Url.Action("List")'">Go Back to List</button></div>

    <div class="title"><h1>@ViewData["Title"]</h1> </div>
</div>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProjectName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProjectName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfessorName)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfessorName)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.ProfessorEmail)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProfessorEmail)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Department)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Department)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Description)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Description)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.AssociatedImag)
        </dt>
        <dd class="col-sm-10">
            @Html.Raw(replaceImageIfNull(Model.AssociatedImag))
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.StudentMentor)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.StudentMentor)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.BeginningDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.BeginningDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.EndDate)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.EndDate)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Pay)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Pay)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Filled)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Filled)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="OpportunityID" />
        <input type="submit" value="Delete" class="btn btn-danger" />
    </form>
</div>